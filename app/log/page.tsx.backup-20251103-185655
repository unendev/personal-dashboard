'use client'

import Link from 'next/link';
import React, { useState, useEffect, useRef, useCallback } from 'react';
import { signOut } from 'next-auth/react';
import { useDevSession, markManualLogout } from '../hooks/useDevSession';
import CreateLogModal from '@/app/components/features/log/CreateLogModal'
import NestedTimerZone from '@/app/components/features/timer/NestedTimerZone'
import CategoryZoneWrapper from '@/app/components/features/timer/CategoryZoneWrapper'
import { QuickCreateData } from '@/app/components/features/timer/QuickCreateDialog'
import TimeStatsChart from '@/app/components/shared/TimeStatsChart'
import DateRangePicker, { DateRangeValue } from '@/app/components/shared/DateRangePicker'
import CollapsibleAISummary from '@/app/components/shared/CollapsibleAISummary'
import LazyLoadWrapper from '@/app/components/shared/LazyLoadWrapper'

import SimpleMdEditor from '@/app/components/features/notes/SimpleMdEditor'
import { Button } from '@/app/components/ui/button'
import { CategoryCache } from '@/lib/category-cache'
import { InstanceTagCache } from '@/lib/instance-tag-cache'
import { QuickCreateModal, CreateTreasureData } from '@/app/components/shared/QuickCreateModal'
import DailyProgressModal from '@/app/components/features/progress/DailyProgressModal'
import { useTimerControl } from '@/app/hooks/useTimerControl'
import { TimerProvider } from '@/app/features/timer/context/TimerContext'

export default function LogPage() {
  const { data: session, status } = useDevSession();
  const [isPageReady, setIsPageReady] = useState(false);
  const [selectedDate, setSelectedDate] = useState(new Date().toISOString().split('T')[0]);
  
  // æ—¶é—´æ®µé€‰æ‹©ï¼ˆç”¨äºç»Ÿè®¡å’ŒAIæ€»ç»“ï¼‰
  const [dateRange, setDateRange] = useState<DateRangeValue>({
    startDate: '',
    endDate: '',
    label: 'æœ¬å‘¨'
  });
  
  // ç§»åŠ¨ç«¯åŒºåŸŸåˆ‡æ¢
  const [activeSection, setActiveSection] = useState<'timer' | 'notes' | 'stats' | 'ai'>('timer');
  const [isMobile, setIsMobile] = useState(false);
  
  // å¾…åŠæ¸…å•/ç¬”è®°è§†å›¾åˆ‡æ¢
  const [timerTasks, setTimerTasks] = useState<{
    id: string;
    name: string;
    categoryPath: string;
    instanceTag?: string | null;
    elapsedTime: number;
    initialTime: number; // åˆå§‹æ—¶é—´ï¼ˆç§’ï¼‰
    isRunning: boolean;
    startTime: number | null;
    isPaused: boolean;
    pausedTime: number;
    order?: number; // æ’åºå­—æ®µï¼ˆæ•°å€¼è¶Šå°è¶Šé å‰ï¼‰
    version?: number; // ã€ä¹è§‚é”ã€‘ç‰ˆæœ¬å·
    createdAt: string;
    updatedAt: string;
  }[]>([]);
  const userId = session?.user?.id || 'user-1'; // ä½¿ç”¨çœŸå®ç”¨æˆ·IDæˆ–å›é€€åˆ°ä¸´æ—¶ID
  
  // æ“ä½œå†å²è®°å½•
  const [operationHistory, setOperationHistory] = useState<{
    id: string;
    action: string;
    taskName: string;
    timestamp: Date;
    details?: string;
  }[]>([]);

  // æ“ä½œè®°å½•æŠ˜å çŠ¶æ€
  const [isOperationHistoryExpanded, setIsOperationHistoryExpanded] = useState(false);
  const [hasFetchedHistory, setHasFetchedHistory] = useState(false);
  
  // æ“ä½œè®°å½•å¼•ç”¨
  const operationHistoryRef = useRef<HTMLDivElement>(null);
  
  // åˆ›å»ºäº‹ç‰©æ¨¡æ€æ¡†çŠ¶æ€
  const [isCreateLogModalOpen, setIsCreateLogModalOpen] = useState(false);
  const [isCreatingTask, setIsCreatingTask] = useState(false);
  
  // è—å®é˜åˆ›å»ºçŠ¶æ€
  const [isTreasureModalOpen, setIsTreasureModalOpen] = useState(false);
  const [treasureModalType, setTreasureModalType] = useState<'TEXT' | 'IMAGE' | 'MUSIC'>('TEXT');
  const [showSuccessNotification, setShowSuccessNotification] = useState(false);

  // æ¯æ—¥è¿›åº¦å®¡æ ¸çŠ¶æ€
  const [isDailyProgressOpen, setIsDailyProgressOpen] = useState(false);
  const [progressTargetDate, setProgressTargetDate] = useState('');

  // ä»æ•°æ®åº“åŠ è½½ä»»åŠ¡ï¼ˆå•æ—¥ - ç”¨äºè®¡æ—¶å™¨ï¼‰
  const fetchTimerTasks = React.useCallback(async () => {
    try {
      const response = await fetch(`/api/timer-tasks?userId=${userId}&date=${selectedDate}`);
      if (response.ok) {
        const tasks = await response.json();
        setTimerTasks(tasks);
      }
    } catch (error) {
      console.error('åŠ è½½ä»»åŠ¡å¤±è´¥:', error);
    }
  }, [userId, selectedDate]);

  // ã€ç‰ˆæœ¬å†²çªå¤„ç†ã€‘
  const handleVersionConflict = useCallback(() => {
    console.warn('ğŸ”„ æ£€æµ‹åˆ°ç‰ˆæœ¬å†²çªï¼Œæ­£åœ¨åˆ·æ–°ä»»åŠ¡æ•°æ®...');
    fetchTimerTasks(); // é‡æ–°åŠ è½½æœ€æ–°æ•°æ®
  }, [fetchTimerTasks]);

  // ã€äº’æ–¥æç¤ºã€‘
  const handleTasksPaused = useCallback((pausedTasks: Array<{ id: string; name: string }>) => {
    if (pausedTasks.length > 0) {
      const taskNames = pausedTasks.map(t => t.name).join('ã€');
      console.log(`â„¹ï¸ å·²è‡ªåŠ¨æš‚åœï¼š${taskNames}`);
      // å¯é€‰ï¼šæ˜¾ç¤º toast é€šçŸ¥ç”¨æˆ·
    }
  }, []);

  // ã€çŠ¶æ€åŒæ­¥ã€‘ç­‰å¾…ä»»åŠ¡åˆ›å»ºå®Œæˆåè‡ªåŠ¨å¯åŠ¨
  const [pendingStartTaskId, setPendingStartTaskId] = useState<string | null>(null);

  // ã€åˆ›å»ºç»Ÿä¸€çš„ Timer æ§åˆ¶å™¨ã€‘
  const timerControl = useTimerControl({
    tasks: timerTasks,
    onTasksChange: setTimerTasks,
    onVersionConflict: handleVersionConflict,
    onTasksPaused: handleTasksPaused,
  });

  // ã€å­ä»»åŠ¡è‡ªåŠ¨å¯åŠ¨ã€‘é€šè¿‡ pendingStartTaskId æœºåˆ¶
  const handleRequestAutoStart = useCallback((taskId: string) => {
    console.log('ğŸ“ [çˆ¶ç»„ä»¶] æ”¶åˆ°è‡ªåŠ¨å¯åŠ¨è¯·æ±‚:', taskId);
    setPendingStartTaskId(taskId);
  }, []);
  
  useEffect(() => {
    if (pendingStartTaskId) {
      console.log('ğŸ¬ [useEffectè§¦å‘] pendingStartTaskId:', pendingStartTaskId);
      
      // ç¡®ä¿çŠ¶æ€å·²å®Œå…¨æ›´æ–°åå†æ‰§è¡Œ
      const timer = setTimeout(async () => {
        // é‡è¯•é€»è¾‘ï¼šæœ€å¤š5æ¬¡
        let retryCount = 0;
        const maxRetries = 5;
        
        while (retryCount < maxRetries) {
          try {
            console.log(`ğŸš€ [è‡ªåŠ¨å¯åŠ¨] å¼€å§‹æ‰§è¡Œï¼Œä»»åŠ¡ID: ${pendingStartTaskId} (å°è¯• ${retryCount + 1}/${maxRetries})`);
            const result = await timerControl.startTimer(pendingStartTaskId);
            
            if (result.success) {
              console.log('âœ… [è‡ªåŠ¨å¯åŠ¨] å®Œæˆ:', pendingStartTaskId);
              recordOperation('å¼€å§‹è®¡æ—¶', 'æ–°ä»»åŠ¡', 'è‡ªåŠ¨å¼€å§‹');
              break; // æˆåŠŸï¼Œé€€å‡ºé‡è¯•å¾ªç¯
            } else if (result.reason === 'version_conflict') {
              // ç‰ˆæœ¬å†²çªï¼šå¼ºæç¤ºç”¨æˆ·
              console.error('âŒ [è‡ªåŠ¨å¯åŠ¨] ç‰ˆæœ¬å†²çª:', result.conflictTaskName);
              alert(`âš ï¸ æ•°æ®å†²çª\n\nä»»åŠ¡"${result.conflictTaskName}"çš„æ•°æ®å·²åœ¨å…¶ä»–åœ°æ–¹è¢«ä¿®æ”¹ã€‚\n\nè¿™å¯èƒ½æ˜¯å› ä¸ºï¼š\n1. æ‚¨åœ¨å…¶ä»–è®¾å¤‡/æµè§ˆå™¨çª—å£æ“ä½œäº†æ­¤ä»»åŠ¡\n2. å…¶ä»–ç”¨æˆ·ä¿®æ”¹äº†æ­¤ä»»åŠ¡\n\né¡µé¢å°†è‡ªåŠ¨åˆ·æ–°ä»¥è·å–æœ€æ–°æ•°æ®ã€‚`);
              
              // å¼ºåˆ¶åˆ·æ–°æ•°æ®
              await fetchTimerTasks();
              break; // å†²çªï¼Œä¸é‡è¯•
            } else if (result.reason === 'processing') {
              // æ­£åœ¨å¤„ç†ä¸­ï¼Œç­‰å¾…åé‡è¯•
              console.warn(`â¸ï¸ [è‡ªåŠ¨å¯åŠ¨] æ­£åœ¨å¤„ç†ä¸­ï¼Œç­‰å¾…300msåé‡è¯•... (${retryCount + 1}/${maxRetries})`);
              retryCount++;
              if (retryCount < maxRetries) {
                await new Promise(resolve => setTimeout(resolve, 300));
              }
            } else if (result.reason === 'not_found') {
              // æœªæ‰¾åˆ°ä»»åŠ¡ï¼ŒçŠ¶æ€å¯èƒ½è¿˜æ²¡åŒæ­¥ï¼Œç­‰å¾…åé‡è¯•
              console.warn(`ğŸ” [è‡ªåŠ¨å¯åŠ¨] æœªæ‰¾åˆ°ä»»åŠ¡ï¼Œç­‰å¾…300msåé‡è¯•... (${retryCount + 1}/${maxRetries})`);
              retryCount++;
              if (retryCount < maxRetries) {
                await new Promise(resolve => setTimeout(resolve, 300));
              }
            } else {
              console.error('âŒ [è‡ªåŠ¨å¯åŠ¨] å¤±è´¥:', result.reason);
              break; // å…¶ä»–é”™è¯¯ï¼Œä¸é‡è¯•
            }
          } catch (error) {
            console.error('âŒ [è‡ªåŠ¨å¯åŠ¨] å¼‚å¸¸:', error);
            break;
          }
        }
        
        if (retryCount >= maxRetries) {
          console.error('âŒ [è‡ªåŠ¨å¯åŠ¨] é‡è¯•æ¬¡æ•°å·²ç”¨å°½ï¼Œä»»åŠ¡ID:', pendingStartTaskId);
        }
        
        setPendingStartTaskId(null);
      }, 200);  // å»¶è¿Ÿ200msï¼Œç¡®ä¿çŠ¶æ€æ›´æ–°å®Œæˆ
      
      return () => {
        console.log('ğŸ§¹ [useEffectæ¸…ç†] å–æ¶ˆå®šæ—¶å™¨:', pendingStartTaskId);
        clearTimeout(timer);
      };
    }
  }, [pendingStartTaskId, timerControl, fetchTimerTasks]);
  // æ³¨æ„ï¼šrecordOperation ä¸åœ¨ä¾èµ–ä¸­ï¼Œå› ä¸ºå®ƒæ˜¯ useCallbackï¼Œå·²ç»ç¨³å®šäº†

  // æ»šåŠ¨æ¢å¤é€»è¾‘
  const scrollContainerRef = useRef<HTMLDivElement>(null);
  const scrollPositionRef = useRef(0);
  const scrollTimeoutRef = useRef<NodeJS.Timeout | null>(null);

  const saveScrollPosition = useCallback(() => {
    if (scrollContainerRef.current) {
      if (scrollTimeoutRef.current) {
        clearTimeout(scrollTimeoutRef.current);
      }
      scrollTimeoutRef.current = setTimeout(() => {
        if (scrollContainerRef.current) {
          scrollPositionRef.current = scrollContainerRef.current.scrollTop;
        }
      }, 100);
    }
  }, []);

  const saveScrollPositionNow = useCallback(() => {
    if (scrollContainerRef.current) {
      scrollPositionRef.current = scrollContainerRef.current.scrollTop;
    }
  }, []);

  const restoreScrollPosition = useCallback(() => {
    if (scrollContainerRef.current && scrollPositionRef.current > 0) {
      scrollContainerRef.current.scrollTop = scrollPositionRef.current;
    }
  }, []);

  useEffect(() => {
    const timer = setTimeout(() => {
      restoreScrollPosition();
    }, 0);
    return () => clearTimeout(timer);
  }, [timerTasks, restoreScrollPosition]);

  // åˆ›å»ºå®è—å¤„ç†å‡½æ•°
  const handleCreateTreasure = async (data: CreateTreasureData) => {
    try {
      const response = await fetch('/api/treasures', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });

      if (!response.ok) {
        throw new Error('åˆ›å»ºå®è—å¤±è´¥');
      }

      // æ˜¾ç¤ºæˆåŠŸé€šçŸ¥
      setShowSuccessNotification(true);
      setTimeout(() => {
        setShowSuccessNotification(false);
      }, 3000);
    } catch (error) {
      console.error('Error creating treasure:', error);
      throw error;
    }
  };

  const handleTreasureTypeSelect = (type: 'TEXT' | 'IMAGE' | 'MUSIC') => {
    setTreasureModalType(type);
    setIsTreasureModalOpen(true);
  };

  // è®¡ç®—æœ¬å‘¨æ—¥æœŸèŒƒå›´
  const getThisWeekDates = () => {
    const today = new Date();
    const dayOfWeek = today.getDay(); // 0 (å‘¨æ—¥) - 6 (å‘¨å…­)
    
    // è®¡ç®—æœ¬å‘¨ä¸€
    const monday = new Date(today);
    monday.setDate(today.getDate() - (dayOfWeek === 0 ? 6 : dayOfWeek - 1));
    
    // è®¡ç®—æœ¬å‘¨æ—¥
    const sunday = new Date(monday);
    sunday.setDate(monday.getDate() + 6);
    
    return {
      startDate: monday.toISOString().split('T')[0],
      endDate: sunday.toISOString().split('T')[0]
    };
  };

  // æ‰“å¼€æ¯æ—¥è¿›åº¦å®¡æ ¸ï¼ˆåˆ†æå‰ä¸€å¤©ï¼‰
  const handleOpenDailyProgress = () => {
    const yesterday = new Date();
    yesterday.setDate(yesterday.getDate() - 1);
    const dateStr = yesterday.toISOString().split('T')[0];
    setProgressTargetDate(dateStr);
    setIsDailyProgressOpen(true);
  };

  // è¿›åº¦ç¡®è®¤åçš„å›è°ƒ
  const handleProgressConfirmed = () => {
    alert('âœ… è¿›åº¦å·²æˆåŠŸå­˜æ¡£ï¼');
  };

  // æ¯å‘¨å›é¡¾ï¼ˆå ä½ï¼‰
  const handleOpenWeeklyReview = () => {
    alert('ğŸ“Š æ¯å‘¨å›é¡¾åŠŸèƒ½æ­£åœ¨å¼€å‘ä¸­...');
  };

  // æ£€æµ‹å±å¹•å°ºå¯¸ï¼ˆä½¿ç”¨å±å¹•å®½åº¦è€Œä¸æ˜¯ UserAgentï¼‰
  useEffect(() => {
    const checkScreenSize = () => {
      setIsMobile(window.innerWidth < 768); // Tailwind md breakpoint
    };
    
    checkScreenSize();
    window.addEventListener('resize', checkScreenSize);
    
    return () => window.removeEventListener('resize', checkScreenSize);
  }, []);
  
  // é¢„åŠ è½½åˆ†ç±»å’Œäº‹åŠ¡é¡¹æ•°æ®
  useEffect(() => {
    const preloadData = async () => {
      try {
        // å¹¶è¡Œé¢„åŠ è½½åˆ†ç±»å’Œäº‹åŠ¡é¡¹æ•°æ®
        await Promise.all([
          CategoryCache.preload(),
          InstanceTagCache.preload('user-1')
        ]);
        console.log('åˆ†ç±»å’Œäº‹åŠ¡é¡¹æ•°æ®é¢„åŠ è½½å®Œæˆ');
      } catch (error) {
        console.error('é¢„åŠ è½½æ•°æ®å¤±è´¥:', error);
      }
    };

    preloadData();
  }, []);

  // ä»æ•°æ®åº“åŠ è½½æ—¶é—´èŒƒå›´ä»»åŠ¡ï¼ˆç”¨äºç»Ÿè®¡ï¼‰
  const [rangeTimerTasks, setRangeTimerTasks] = useState<typeof timerTasks>([]);
  const fetchRangeTimerTasks = React.useCallback(async () => {
    if (!dateRange.startDate || !dateRange.endDate) return;
    
    try {
      const response = await fetch(
        `/api/timer-tasks?userId=${userId}&startDate=${dateRange.startDate}&endDate=${dateRange.endDate}`
      );
      if (response.ok) {
        const tasks = await response.json();
        setRangeTimerTasks(tasks);
      }
    } catch (error) {
      console.error('Failed to fetch range timer tasks:', error);
    }
  }, [userId, dateRange.startDate, dateRange.endDate]);

  // ç¡®ä¿é¡µé¢å®Œå…¨åŠ è½½åå†æ˜¾ç¤ºå†…å®¹
  useEffect(() => {
    const timer = setTimeout(() => {
      setIsPageReady(true);
      fetchTimerTasks(); // åŠ è½½ä»»åŠ¡æ•°æ®
    }, 100); // çŸ­æš‚å»¶è¿Ÿç¡®ä¿æ ·å¼åŠ è½½å®Œæˆ

    return () => clearTimeout(timer);
  }, [fetchTimerTasks]);

  // å½“æ—¶é—´èŒƒå›´å˜åŒ–æ—¶ï¼ŒåŠ è½½å¯¹åº”çš„ä»»åŠ¡æ•°æ®
  useEffect(() => {
    if (dateRange.startDate && dateRange.endDate) {
      fetchRangeTimerTasks();
    }
  }, [fetchRangeTimerTasks]);

  // ç‚¹å‡»å¤–éƒ¨åŒºåŸŸå…³é—­æ“ä½œè®°å½•æŠ˜å æ 
  useEffect(() => {
    const handleClickOutside = (event: MouseEvent) => {
      // æ£€æŸ¥æ˜¯å¦ç‚¹å‡»äº†æ“ä½œè®°å½•æŠ˜å æ å¤–éƒ¨
      if (operationHistoryRef.current && !operationHistoryRef.current.contains(event.target as Node)) {
        setIsOperationHistoryExpanded(false);
      }
    };

    // åªæœ‰åœ¨æŠ˜å æ æ‰“å¼€æ—¶æ‰æ·»åŠ äº‹ä»¶ç›‘å¬å™¨
    if (isOperationHistoryExpanded) {
      document.addEventListener('mousedown', handleClickOutside);
    }

    return () => {
      document.removeEventListener('mousedown', handleClickOutside);
    };
  }, [isOperationHistoryExpanded]);

  const handleLogSaved = () => {
    // é‡æ–°è·å–æ—¥å¿—æ•°æ®
    // fetchLogs();
  };

  // è·å–æ“ä½œè®°å½•
  const fetchOperationRecords = async () => {
    try {
      const response = await fetch('/api/operation-records');
      if (response.ok) {
        const records = await response.json();
        setOperationHistory(records);
      }
    } catch (error) {
      console.error('è·å–æ“ä½œè®°å½•å¤±è´¥:', error);
    }
  };

  // è®°å½•æ“ä½œå†å²
  const recordOperation = useCallback(async (action: string, taskName: string, details?: string) => {
    try {
      // ä¿å­˜åˆ°æ•°æ®åº“
      const response = await fetch('/api/operation-records', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          action,
          taskName,
          details
        }),
      });

      if (response.ok) {
        // é‡æ–°è·å–æ“ä½œè®°å½•
        fetchOperationRecords();
      }
    } catch (error) {
      console.error('ä¿å­˜æ“ä½œè®°å½•å¤±è´¥:', error);
    }
  }, [fetchOperationRecords]);

  const handleAddToTimer = async (taskName: string, categoryPath: string, initialTime: number = 0, instanceTagNames?: string) => {
    // é˜²æ­¢é‡å¤åˆ›å»º
    if (isCreatingTask) {
      console.log('ä»»åŠ¡æ­£åœ¨åˆ›å»ºä¸­ï¼Œè¯·ç¨å€™...');
      return;
    }

    setIsCreatingTask(true);
    
    // å§‹ç»ˆä½¿ç”¨éè´Ÿçš„ orderï¼Œç¡®ä¿è¢«æ’åºé€»è¾‘è§†ä¸º"æœ‰æ•ˆ"ï¼Œå¹¶ä¸ç°æœ‰æœ€å‰å…ƒç´ å¹¶åˆ—
    // åŒåºæ—¶æŒ‰ createdAt é™åºï¼Œæ–°å»ºé¡¹å¤©ç„¶åœ¨æœ€å‰ï¼Œè¾¾åˆ°"ç«‹å³ç½®é¡¶"çš„æ•ˆæœ
    const newOrder = 0;

    // åˆ›å»ºä¸´æ—¶ä»»åŠ¡å¯¹è±¡ç”¨äºä¹è§‚æ›´æ–°
    const tempTask = {
      id: `temp-${Date.now()}`, // ä¸´æ—¶ID
      name: taskName,
      categoryPath: categoryPath,
      instanceTag: instanceTagNames || null,
      elapsedTime: initialTime,
      initialTime: initialTime,
      isRunning: false, // åˆå§‹ä¸è¿è¡Œï¼Œé€šè¿‡äº’æ–¥é€»è¾‘å¯åŠ¨
      startTime: null,
      isPaused: false,
      pausedTime: 0,
      order: newOrder,
      createdAt: new Date().toISOString(),
      updatedAt: new Date().toISOString()
    };

    // ç«‹å³æ›´æ–°UIï¼ˆä¹è§‚æ›´æ–°ï¼‰
    setTimerTasks([tempTask, ...timerTasks]);
    recordOperation('æ·»åŠ ä»»åŠ¡', taskName, `åˆå§‹æ—¶é—´: ${initialTime}ç§’`);
    // å…³é—­æ¨¡æ€æ¡†
    setIsCreateLogModalOpen(false);
    console.log('æ–°ä»»åŠ¡å·²æ·»åŠ åˆ°åˆ—è¡¨å‰é¢:', tempTask.name);

    // å¼‚æ­¥å¤„ç†æ•°æ®åº“æ“ä½œ
    try {
      const newTask = {
        name: taskName,
        categoryPath: categoryPath,
        instanceTag: instanceTagNames || null,
        instanceTagNames: instanceTagNames ? instanceTagNames.split(',').map(tag => tag.trim()).filter(tag => tag) : [],
        elapsedTime: initialTime,
        initialTime: initialTime,
        isRunning: false, // åˆå§‹ä¸è¿è¡Œï¼Œé€šè¿‡äº’æ–¥é€»è¾‘å¯åŠ¨
        startTime: null,
        isPaused: false,
        pausedTime: 0,
        order: newOrder,
        date: selectedDate, // ä½¿ç”¨ç”¨æˆ·å½“å‰é€‰ä¸­çš„æ—¥æœŸ
        userId: userId
      };

      const response = await fetch('/api/timer-tasks', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(newTask),
      });

      if (response.ok) {
        const createdTask = await response.json();
        
        // ç”¨çœŸå®çš„ä»»åŠ¡æ•°æ®æ›¿æ¢ä¸´æ—¶ä»»åŠ¡ï¼Œç¡®ä¿çŠ¶æ€ä¸€è‡´
        setTimerTasks(prevTasks => {
          return prevTasks.map(task => {
            if (task.id !== tempTask.id) return task;
            return {
              ...createdTask,
              // ç¡®ä¿çŠ¶æ€ä¸æ•°æ®åº“ä¸€è‡´
              isRunning: createdTask.isRunning,
              isPaused: createdTask.isPaused,
              startTime: createdTask.startTime,
              elapsedTime: createdTask.elapsedTime,
              order: createdTask.order ?? task.order,
              instanceTag: createdTask.instanceTag ?? task.instanceTag
            };
          });
        });
        
        console.log('âœ… [åå°åŒæ­¥] ä»»åŠ¡åˆ›å»ºæˆåŠŸ:', createdTask.name);
        
        // è§¦å‘è‡ªåŠ¨å¯åŠ¨ï¼ˆé€šè¿‡äº’æ–¥é€»è¾‘ï¼‰
        setPendingStartTaskId(createdTask.id);
      } else {
        throw new Error('Failed to create task');
      }
    } catch (error) {
      console.error('Failed to add task:', error);
      
      // å¦‚æœæ•°æ®åº“æ“ä½œå¤±è´¥ï¼Œå›æ»šUIçŠ¶æ€
      setTimerTasks(prevTasks => 
        prevTasks.filter(task => task.id !== tempTask.id)
      );
      
      // è®°å½•å¤±è´¥çš„æ“ä½œ
      recordOperation('åˆ›å»ºå¤±è´¥', taskName, `é”™è¯¯: ${error instanceof Error ? error.message : 'æœªçŸ¥é”™è¯¯'}`);
      
      // æ˜¾ç¤ºæ›´è¯¦ç»†çš„é”™è¯¯ä¿¡æ¯
      const errorMessage = error instanceof Error ? error.message : 'æœªçŸ¥é”™è¯¯';
      alert(`ä»»åŠ¡åˆ›å»ºå¤±è´¥: ${errorMessage}\n\nè¯·æ£€æŸ¥ç½‘ç»œè¿æ¥åé‡è¯•`);
    } finally {
      // æ— è®ºæˆåŠŸè¿˜æ˜¯å¤±è´¥ï¼Œéƒ½è¦é‡ç½®åŠ è½½çŠ¶æ€
      setIsCreatingTask(false);
    }
  };

  // å¤„ç†å¿«é€Ÿåˆ›å»ºï¼ˆæ¥è‡ªåˆ†åŒºå¤´éƒ¨çš„å¿«é€Ÿåˆ›å»ºæŒ‰é’®ï¼‰
  const handleQuickCreate = async (data: QuickCreateData) => {
    if (isCreatingTask) {
      console.log('ä»»åŠ¡æ­£åœ¨åˆ›å»ºä¸­ï¼Œè¯·ç¨å€™...');
      return;
    }

    setIsCreatingTask(true);
    
    const newOrder = 0;
    const tempTask = {
      id: `temp-${Date.now()}`,
      name: data.name,
      categoryPath: data.categoryPath,
      instanceTag: data.instanceTagNames.join(',') || null,
      elapsedTime: data.initialTime,
      initialTime: data.initialTime,
      isRunning: false, // åˆå§‹ä¸è¿è¡Œï¼Œé€šè¿‡äº’æ–¥é€»è¾‘å¯åŠ¨
      startTime: null,
      isPaused: false,
      pausedTime: 0,
      order: newOrder,
      createdAt: new Date().toISOString(),
      updatedAt: new Date().toISOString()
    };

    setTimerTasks([tempTask, ...timerTasks]);
    recordOperation('å¿«é€Ÿåˆ›å»ºä»»åŠ¡', data.name, `åˆ†ç±»: ${data.categoryPath}`);

    try {
      const newTask = {
        name: data.name,
        categoryPath: data.categoryPath,
        instanceTag: data.instanceTagNames.join(',') || null,
        instanceTagNames: data.instanceTagNames,
        elapsedTime: data.initialTime,
        initialTime: data.initialTime,
        isRunning: false, // åˆå§‹ä¸è¿è¡Œï¼Œé€šè¿‡äº’æ–¥é€»è¾‘å¯åŠ¨
        startTime: null,
        isPaused: false,
        pausedTime: 0,
        order: newOrder,
        date: new Date().toISOString().split('T')[0],
        userId: userId
      };

      const response = await fetch('/api/timer-tasks', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(newTask),
      });

      if (response.ok) {
        const createdTask = await response.json();
        
        setTimerTasks(prevTasks => {
          return prevTasks.map(task => {
            if (task.id !== tempTask.id) return task;
            return {
              ...createdTask,
              isRunning: createdTask.isRunning,
              isPaused: createdTask.isPaused,
              startTime: createdTask.startTime,
              elapsedTime: createdTask.elapsedTime,
              order: createdTask.order ?? task.order,
              instanceTag: createdTask.instanceTag ?? task.instanceTag
            };
          });
        });
        
        console.log('âœ… [åå°åŒæ­¥] ä»»åŠ¡åˆ›å»ºæˆåŠŸ:', createdTask.name);
        
        // å¦‚æœautoStartï¼Œè§¦å‘è‡ªåŠ¨å¯åŠ¨ï¼ˆé€šè¿‡äº’æ–¥é€»è¾‘ï¼‰
        if (data.autoStart) {
          setPendingStartTaskId(createdTask.id);
        }
      } else {
        throw new Error('Failed to create task');
      }
    } catch (error) {
      console.error('Failed to quick create task:', error);
      
      setTimerTasks(prevTasks => 
        prevTasks.filter(task => task.id !== tempTask.id)
      );
      
      recordOperation('å¿«é€Ÿåˆ›å»ºå¤±è´¥', data.name, `é”™è¯¯: ${error instanceof Error ? error.message : 'æœªçŸ¥é”™è¯¯'}`);
      
      const errorMessage = error instanceof Error ? error.message : 'æœªçŸ¥é”™è¯¯';
      alert(`å¿«é€Ÿåˆ›å»ºä»»åŠ¡å¤±è´¥: ${errorMessage}\n\nè¯·æ£€æŸ¥ç½‘ç»œè¿æ¥åé‡è¯•`);
    } finally {
      setIsCreatingTask(false);
    }
  };

  // å¦‚æœæ­£åœ¨åŠ è½½èº«ä»½éªŒè¯çŠ¶æ€ï¼Œæ˜¾ç¤ºåŠ è½½çŠ¶æ€
  if (status === "loading") {
    return (
      <div className="flex items-center justify-center h-screen">
        <div className="text-center">
          <div className="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-500 mx-auto mb-2"></div>
          <div className="text-gray-400">éªŒè¯èº«ä»½ä¸­...</div>
        </div>
